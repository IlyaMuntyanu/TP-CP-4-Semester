@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table">
        <thead>
        <td>Название</td>
        <td>Дата начала</td>
        <td>Дата конца</td>
        <td>Цена</td>
        @if (SignInManager.IsSignedIn(User))
        {
            <td>Действия</td>
        }
        </thead>
        @foreach (Tour tour in ViewBag.ToursList)
        {
            <tr class="p-3">
                <td>@tour.Name</td>
                <td>@tour.StartDate</td>
                <td>@tour.EndDate</td>
                <td>@tour.Price &#8381;</td>
                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("Manager"))
                    {
                        <td>
                            <a class="btn btn-primary" href="#" role="button"><i class="fa-solid fa-pencil"></i></a>
                            <a class="btn btn-danger" href="#" role="button"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    }
                    else
                    {
                        <td>Not a manager!</td>
                    }
                }
            </tr>
        }
    </table>


</div>